<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ProjectName, 'Project Name' %>
    <%= form.text_field :ProjectName %>
  </div>

  <div class="field">
    <%= form.label :ProjectLink, 'Link to Project' %>
    <%= form.text_area :ProjectLink %>
  </div>

  <div class="field">
    <%= form.label :ProjectOwner, 'Project Owner' %>
    <%= form.text_field :ProjectOwner %>
  </div>

  <div class="field">
    <%= form.label :ProjectStart, 'Start Date' %>
    <%= form.date_select :ProjectStart %>
  </div>

  <div class="field">
    <%= form.label :ProjectEnd, 'End Date' %>
    <%= form.date_select :ProjectEnd %>
  </div>

  <div class="field">
    <%= form.label :ProjectDescription, 'Description' %>
    <%= form.text_area :ProjectDescription %>
  </div>

  <div class="field">
    <%= form.label :ProjectCover, 'Project Cover' %>
    <%= form.file_field :ProjectCover %>
  </div>

  </div>

  <div class="field">
    <%= form.label :TypeID, 'Project Type' %>
    <%= form.select :TypeID, Type.order(:TypeName).map { |type| [type.TypeName, type.id] }, include_blank: true, id: "id_of_the_type_id_select_box" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
