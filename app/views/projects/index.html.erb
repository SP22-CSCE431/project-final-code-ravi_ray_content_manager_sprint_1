<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Owner</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Description</th>
      <th>Cover</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.ProjectName %></td>
        <td><%= link_to "Link", project.ProjectLink, rel: 'noopener', target: '_blank' %> </td>
        <td><%= project.ProjectOwner %></td>
        <td><%= project.ProjectStart %></td>
        <td><%= project.ProjectEnd %></td>
        <td><%= project.ProjectDescription %></td>
        <td><%= project.ProjectCover %></td>
        <td><%= Type.find(project.TypeID).TypeName %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

